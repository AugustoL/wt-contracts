{
  "name": "@windingtree/wt-contracts",
  "version": "0.1.0",
  "description": "Smart contracts of the Winding Tree platform",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "scripts/test.sh",
    "postinstall": "scripts/install.sh",
    "testrpc": "./node_modules/.bin/testrpc",
    "update-submodules": "git submodule update --recursive && npm run postinstall",
    "pull-submodules": "git submodule foreach git pull origin master && npm run postinstall",
    "coverage": "scripts/coverage.sh",
    "clean": "rimraf build",
    "buildfornpm": "npm run clean && truffle compile"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/windingtree/wt-contracts"
  },
  "keywords": [
    "winding-tree",
    "security",
    "encryption",
    "smart-contracts"
  ],
  "main": "index.js",
  "author": "Winding Tree Developers <dev@windingtree.com>",
  "license": "GPLv3",
  "dependencies": {
    "abi-decoder": "^1.0.8",
    "babel-polyfill": "^6.23.0",
    "chai": "^3.5.0",
    "moment": "^2.19.1",
    "truffle-hdwallet-provider": "0.0.3",
    "web3": "^1.0.0-beta.23",
    "zeppelin-solidity": "1.3.0"
  },
  "devDependencies": {
    "coveralls": "^2.13.1",
    "ethereumjs-testrpc": "4.1.3",
    "rimraf": "^2.6.2",
    "solidity-coverage": "^0.2.4",
    "truffle": "4.0.0"
  },
  "engines": {
    "node": ">=8.9.4"
  }
}
